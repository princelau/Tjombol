<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_rectangle"
            android:orientation="horizontal">

            <Button
                android:id="@+id/claimSalaryBackButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/icon_back_white"
                android:scaleX="0.1"
                android:scaleY="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/paySlipTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="PAY SLIP"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/generatedPaySlipDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat"
                    android:maxLines="1"
                    android:text="25/3/2019 at 9:30PM"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/generatedTransactionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="#10001"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/employmentDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPLOYMENT DETAILS"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:paddingBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="COMPANY A"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/companyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:text="Block 123, Upper Changi Road East S40102"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prince Lau"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/nricTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NRIC"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/nric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S1234567A"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/employeeIcTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee ID"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/employeeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1002132"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/bankAccountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bank Account No."
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/bankAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123-456789-001"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/paymentSchemeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Scheme"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/paymentScheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Flatline"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <View style="@style/Divider"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/amountRequestedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="AMOUNT REQUESTED"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/generatedAmountRequested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$202"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <View style="@style/Divider"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/amountRemainingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="AMOUNT REMAINING"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/generatedAmountRemaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$550"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <View style="@style/Divider"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/deductionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="DEDUCTION"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/generatedDeduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$2"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <View style="@style/Divider"
                android:layout_marginTop="9dp"/>

            <TextView
                android:id="@+id/totalSalaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="TOTAL SALARY INTO BANK"
                android:textAlignment="center"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/generatedTotalSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$200"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textAlignment="center"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/claimSalarySwipeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                style="@style/AppTheme.SwipeButton"
                app:inner_text="SWIPE TO CONFIRM"
                app:inner_text_color="@android:color/white"
                app:inner_text_size="18sp"
                app:inner_text_top_padding="16dp"
                app:inner_text_bottom_padding="16dp"
                app:inner_text_background="@drawable/slider_button_background"
                app:button_image_height="65dp"
                app:button_image_width="65dp"
                app:button_image_disabled="@drawable/icon_swipe_right"
                app:button_image_enabled="@drawable/icon_claim_salary_confirmed"
                app:button_left_padding="20dp"
                app:button_right_padding="20dp"
                app:button_top_padding="20dp"
                app:button_bottom_padding="20dp"
                app:button_background="@drawable/slider_button_white"
                app:initial_state="disabled"
                app:has_activate_state="true"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>